<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgSanPham"
            android:src="@drawable/apple"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:maxLines="2"
                android:textColor="#000"
                android:id="@+id/txtTenSP"
                android:layout_width="match_parent"
                android:lines="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="19dp"
                android:text="Apple Iphone 8 Plus Gold Apple Iphone 8 Plus Gold " />

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#e45807"
                android:id="@+id/txtGiaSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTenSP"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="20.490.00 Ä‘" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtGiaSP"
                    android:src="@drawable/icn_heart"
                    android:id="@+id/imgLove"
                    android:layout_marginLeft="26dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_below="@id/txtGiaSP"
                    android:id="@+id/txtCountLove"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:layout_toRightOf="@+id/imgLove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtGiaSP"
                    android:src="@drawable/icn_postlesson_comments"
                    android:id="@+id/imgComment"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtCountLove"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_below="@id/txtGiaSP"
                    android:id="@+id/txtCountComment"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="100"
                    android:layout_toRightOf="@+id/imgComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <RatingBar
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/imgLove"
                android:id="@+id/rbComment"
                style="@style/StarRatingBar"
                android:clickable="true"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
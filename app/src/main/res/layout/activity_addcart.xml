<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.pctruong.appbanhang.view.Activity.AddCartActivity">

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:onClick="onBackPress"
            android:id="@+id/ln_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_arrow" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tiến hành đặt mua hàng" />

    <com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/ipName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:background="@android:drawable/editbox_background_normal"
            android:paddingLeft="5dp"
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Name"
            android:inputType="textCapWords"
            android:textSize="15sp"
           />

    </com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout>

    <com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/ipPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:background="@android:drawable/editbox_background_normal"
            android:paddingLeft="5dp"
            android:id="@+id/edPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone"
            android:numeric="integer"
            android:textSize="15sp"
            android:inputType="number"
            android:maxLength="11" />

    </com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout>

    <com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/ipAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:background="@android:drawable/editbox_background_normal"
            android:paddingLeft="5dp"
            android:id="@+id/edAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Address"
            android:textSize="15sp"
            android:inputType="text|textMultiLine"
            />

    </com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout>

    <com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/ipEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:paddingLeft="5dp"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            />
    </com.example.pctruong.appbanhang.view.RoundedBorderedTextInputLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:onClick="onClick"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/txtDongBo"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Ứng dụng sẽ đồng bộ hóa dữ liệu khi có Internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

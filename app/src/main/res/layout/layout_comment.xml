<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_DanhGia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Nhận xét và Đánh giá" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1.5">


            <TextView
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/txtDanhGiaTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:text="0" />
            <TextView
                android:layout_marginLeft="5dp"
                android:text="trên 5"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@+id/txtDanhGiaTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RatingBar
                android:layout_marginTop="7dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/txtDanhGiaTB"
                android:id="@+id/rbDanhGia"
                style="@style/StarRatingBar"
                android:clickable="true"
                android:isIndicator="true"
                android:stepSize="1.0"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/txtSoLuongDanhGia"
                  android:textSize="13sp"
                  android:layout_marginTop="3dp"
                  android:layout_marginLeft="40dp"
                  android:layout_below="@id/rbDanhGia"
                  android:text="0 Đánh giá"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/namsao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Sao"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/bonsao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4 Sao"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/namsao" />

            <TextView
                android:id="@+id/basao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="3 Sao"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bonsao" />

            <TextView
                android:id="@+id/haisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2 Sao"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basao" />

            <TextView
                android:id="@+id/motsao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1 Sao"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/haisao" />

            <ProgressBar

                android:id="@+id/pbnam"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/pbbon"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/pbba"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="65dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/pbhai"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="92dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/pbmot"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="122dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@+id/pbnam"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtbon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@+id/pbbon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="57dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@+id/pbbon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="85dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@+id/pbbon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtmot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="115dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@+id/pbbon"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/viewRV"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false" />
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llDanhGia"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtDanhGia"
            android:layout_gravity="center"
            android:text="Sản phẩm này chưa có đánh giá nào."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_DanhGia"
            android:layout_gravity="center"
            android:text="Hãy là người đâu tiên đánh giá sản phẩm nay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/txtXemTatCa"
        android:textColor="#698af7"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text="Xem tất cả" />
</LinearLayout>
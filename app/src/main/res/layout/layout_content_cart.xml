<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgHinhSanPham"
            android:src="@drawable/apple"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="120dp" />
        <RelativeLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <TextView
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Phạm văn Trường"
                android:id="@+id/txtTenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/txtTenSP"
                android:layout_marginTop="5dp"
                android:id="@+id/txtGiaSP"
                android:textSize="17sp"
                android:textColor="#e70e0e"
                android:text="10000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/bogoc_cart"
                android:layout_below="@id/txtGiaSP"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/lnGiam"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_below="@+id/txtGiaSP"
                        android:id="@+id/btnGiamSoLuong"
                        android:src="@drawable/decrease"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/btnGiamSoLuong"
                    android:layout_below="@+id/txtGiaSP"
                    android:id="@+id/txtSoLuongGioHang"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="200"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            <LinearLayout
                android:id="@+id/lnTang"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/txtSoLuongGioHang"
                    android:layout_below="@+id/txtGiaSP"
                    android:id="@+id/btnTangSoLuong"
                    android:src="@drawable/increase"
                    android:textSize="20sp"
                    android:text="+"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgOpen"
                android:src="@drawable/icn_photooptions_grey"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/ll"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout >